{
  "name": "boardgame",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node build/server/server.js",
    "dev": "yarn app:dev & yarn server:dev",
    "build": "yarn app:build && yarn server:build",
    "app:dev": "react-scripts start",
    "app:build": "react-scripts build",
    "server:dev": "nodemon -- --config nodemon.json",
    "server:build": "tsc --project tsconfig.server.json",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint 'src/**/*.ts?(x)'",
    "component": "node scripts/component.js",
    "redux": "node scripts/redux.js",
    "get": "node scripts/type.js",
    "heroku-postbuild": "yarn build"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/koa-static": "^4.0.1",
    "@types/lodash": "^4.14.149",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "13.1.0",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@types/react-redux": "^7.1.5",
    "@types/react-router-dom": "^5.1.3",
    "http-proxy-middleware": "^0.20.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "pong-react-scripts": "^3.3.0-1",
    "prettier": "^1.19.1",
    "sass": "^1.24.0",
    "typescript": "3.7.4"
  },
  "dependencies": {
    "Poker.JS": "Tairraos/Poker.JS#5f53c9a",
    "array-move": "^2.2.1",
    "axios": "^0.19.0",
    "boardgame.io": "^0.33.1",
    "dotenv": "^8.2.0",
    "koa-static": "^5.0.0",
    "koa2-connect-history-api-fallback": "^0.1.2",
    "lodash": "^4.17.15",
    "lodash-es": "^4.17.15",
    "mongodb": "^3.3.2",
    "pokersolver": "Pong420/pokersolver#38f2e64",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-spring": "^9.0.0-beta.34",
    "react-use-gesture": "^6.0.2",
    "resize-observer-polyfill": "^1.5.1",
    "rxjs": "^6.5.3",
    "use-rx-hooks": "^1.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint",
      "prettier --ignore-path .eslintignore --write",
      "git add"
    ],
    "{*.json,.{babelrc,eslintrc,prettierrc}}": [
      "prettier --ignore-path .eslintignore --parser json --write",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write",
      "git add"
    ],
    "*.{yml,md}": [
      "prettier --ignore-path .eslintignore --single-quote --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "react/self-closing-comp": 1
    }
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
