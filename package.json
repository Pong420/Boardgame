{
  "private": true,
  "name": "boardgame",
  "version": "3.0.0",
  "license": "MIT",
  "repository": "https://github.com/Pong420/fullstack.git",
  "author": "Pong <samfunghp@gmail.com>",
  "scripts": {
    "start": "yarn web start",
    "web": "yarn workspace @boardgame/web",
    "db": "yarn workspace bgio-mongo",
    "e2e": "yarn workspace e2e",
    "dev": "lerna run dev --stream --parallel --ignore bgio-mongo",
    "test": "lerna run test --stream",
    "build": "yarn db build && lerna run build --stream --parallel --ignore bgio-mongo",
    "postinstall": "lerna run postinstall --stream --parallel",
    "heroku-postbuild": "yarn build"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/games/*"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "babel-eslint": "10.1.0",
    "eslint": "7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --rule 'no-console: [\"error\", { allow: [\"warn\", \"error\"] }]' --max-warnings=0",
      "prettier --ignore-path .eslintignore --write"
    ],
    "{*.json,.{babelrc,eslintrc,prettierrc}}": [
      "prettier --ignore-path .eslintignore --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{yml,md}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "engines": {
    "node": "14.x"
  },
  "resolutions": {
    "webpack": "~4.43.0"
  }
}
